<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/item_report_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/item_reportType_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="게시글 타입"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/item_pet_img"
        android:src="@drawable/animal_profile_somi"
        android:layout_gravity="center"
        android:layout_width="190dp"
        android:layout_height="190dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_pet_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="동물 종류"/>

        <TextView
            android:id="@+id/item_pet_race"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="품종"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_pet_gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="성별"/>

        <TextView
            android:id="@+id/item_pet_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="이름"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_pet_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="상세정보"/>

    <TextView
        android:id="@+id/item_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="잃어버린 시간"/>

    <TextView
        android:id="@+id/item_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="잃어버린 장소"/>

</LinearLayout>