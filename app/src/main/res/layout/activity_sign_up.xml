<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hellopet.sangji.hellopet.SignUpActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:id="@+id/signup_back_btn"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="회원가입"
            android:gravity="center_vertical|center"
            android:textSize="20dp"
            android:textColor="#ed7d31"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2.5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical|center"
        android:orientation="vertical">

        <EditText
            android:layout_width="330dp"
            android:layout_height="30dp"
            android:background="@drawable/profile_edittext_shape"
            android:textCursorDrawable="@null"
            android:textColor="#000000"
            android:textSize="15dp"
            android:hint="[필수] 이메일(아이디)"
            android:layout_marginBottom="20dp"
            android:paddingLeft="10dp"
            android:id="@+id/signup_email_et" />

        <EditText
            android:layout_width="330dp"
            android:layout_height="30dp"
            android:background="@drawable/profile_edittext_shape"
            android:textCursorDrawable="@null"
            android:textColor="#000000"
            android:textSize="15dp"
            android:hint="[필수] 비밀번호"
            android:inputType="textPassword"
            android:layout_marginBottom="20dp"
            android:paddingLeft="10dp"
            android:id="@+id/signup_password_et" />
        <EditText
            android:layout_width="330dp"
            android:layout_height="30dp"
            android:background="@drawable/profile_edittext_shape"
            android:textCursorDrawable="@null"
            android:textColor="#000000"
            android:textSize="15dp"
            android:hint="[필수] 비밀번호 확인"
            android:inputType="textPassword"
            android:layout_marginBottom="20dp"
            android:paddingLeft="10dp"
            android:id="@+id/signup_passwordCheck_et" />
        <EditText
            android:layout_width="330dp"
            android:layout_height="30dp"
            android:background="@drawable/profile_edittext_shape"
            android:textCursorDrawable="@null"
            android:textColor="#000000"
            android:textSize="15dp"
            android:hint="[필수] 닉네임"
            android:layout_marginBottom="20dp"
            android:paddingLeft="10dp"
            android:id="@+id/signup_nickName_et" />

        <EditText
            android:layout_width="330dp"
            android:layout_height="30dp"
            android:background="@drawable/profile_edittext_shape"
            android:textCursorDrawable="@null"
            android:textColor="#000000"
            android:textSize="15dp"
            android:hint="[필수] 이름"
            android:layout_marginBottom="20dp"
            android:paddingLeft="10dp"
            android:id="@+id/signup_name_et" />

        <EditText
            android:layout_width="330dp"
            android:layout_height="30dp"
            android:background="@drawable/profile_edittext_shape"
            android:textCursorDrawable="@null"
            android:textColor="#000000"
            android:textSize="15dp"
            android:hint="[필수] 번호"
            android:layout_marginBottom="20dp"
            android:paddingLeft="10dp"
            android:id="@+id/signup_phone_et" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|center">

            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="이용약관"
                android:textSize="10dp"
                android:gravity="center_vertical|center"
                android:autoLink="all"
                android:id="@+id/signup_tos_tv"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="|"
                android:textSize="10dp"
                android:gravity="center_vertical|center"/>
            <TextView
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:text="개인정보 취급방침"
                android:textSize="10dp"
                android:gravity="center_vertical|center"
                android:autoLink="all"
                android:id="@+id/signup_privacyInfo_tv"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical|center">

            <Button
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:text="가입"
                android:textColor="#FFFFFF"
                android:background="@drawable/profile_button_shape"
                android:id="@+id/signup_signup_btn"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
