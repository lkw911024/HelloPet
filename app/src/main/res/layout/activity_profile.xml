<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hellopet.sangji.hellopet.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:id="@+id/profile_back_btn"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="이메일"
                android:textStyle="bold"
                android:textSize="10dp"
                android:gravity="center_vertical|center"/>
            <EditText
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:background="@drawable/profile_edittext_shape"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical|center"
                android:textCursorDrawable="@null"
                android:textColor="#000000"
                android:textSize="15dp"
                android:id="@+id/profile_email_et"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="닉네임"
                android:textStyle="bold"
                android:textSize="10dp"
                android:gravity="center_vertical|center"/>
            <EditText
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:background="@drawable/profile_edittext_shape"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical|center"
                android:textCursorDrawable="@null"
                android:textColor="#000000"
                android:textSize="15dp"
                android:id="@+id/profile_nickName_btn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="이름"
                android:textStyle="bold"
                android:textSize="10dp"
                android:gravity="center_vertical|center"/>
            <EditText
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:background="@drawable/profile_edittext_shape"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical|center"
                android:textCursorDrawable="@null"
                android:textColor="#000000"
                android:textSize="15dp"
                android:id="@+id/profile_name_et"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="전화번호"
                android:textStyle="bold"
                android:textSize="10dp"
                android:gravity="center_vertical|center"/>
            <EditText
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:background="@drawable/profile_edittext_shape"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical|center"
                android:textCursorDrawable="@null"
                android:textColor="#000000"
                android:textSize="15dp"
                android:id="@+id/profile_phone_et"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|center">

            <TextView
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:text="비밀번호 변경"
                android:textSize="10dp"
                android:gravity="center_vertical|center"
                android:autoLink="all"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="|"
                android:textSize="10dp"
                android:gravity="center_vertical|center"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:text="회원 탈퇴"
                android:textSize="10dp"
                android:gravity="center_vertical|center"
                android:autoLink="all"/>
           </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical|center">

            <Button
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:text="저장"
                android:textColor="#FFFFFF"
                android:background="@drawable/profile_button_shape"
                android:id="@+id/profile_save_btn"/>
        </LinearLayout>
    </LinearLayout>

 </LinearLayout>